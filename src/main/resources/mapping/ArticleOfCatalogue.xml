<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blog.dao.ArticleOfCatalogueDao">
    
    <resultMap id="Article" type="com.blog.pojo.Article">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <resultMap id="ArticlesId" type="int">
        <id property="id" column="article_id"/>
    </resultMap>
    <!--<select id="findArticleIdByCataloguename" parameterType="String" resultType="com.blog.pojo.Article">-->
        <!--select * from article where id=(select article_id from article_of_catalogue where catalogue_id=(select id from catalogue where name='abc'))-->
    <!--</select>-->
    <select id="findArticleIdByCatalogueId" parameterType="int" resultType="Integer">
        SELECT article_id FROM article_of_catalogue WHERE catalogue_id=#{id}
    </select>
</mapper>