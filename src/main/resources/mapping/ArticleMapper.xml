<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blog.dao.ArticleDao" >

    <resultMap id="Article" type="com.blog.pojo.Article">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <insert id="addArticle" parameterType="com.blog.pojo.Article">
        INSERT INTO article(title, content, simple) VALUES (#{title}, #{content}, #{simple})
    </insert>

    <select id="getAllArticle" resultMap="Article">
        select * from article
    </select>

    <update id="updateArticle" parameterType="com.blog.pojo.Article">
        UPDATE article set title=#{title}, content = #{content} where id=#{id}
    </update>

    <delete id="deleteArticle" parameterType="com.blog.pojo.Article">
        delete from article where id=#{id}
    </delete>

    <select id="findArticleById" parameterType="int" resultType="com.blog.pojo.Article">
      SELECT * FROM article WHERE id=#{id}
    </select>

</mapper>